{{frost-select-outlet}}
{{#ember-dewey-docs}}
  {{#block-slot 'demo-pane'}}
    {{frost-button
      disabled=disabled
      icon=icon
      size=size
      priority=priority
      text=text
      onClick=onClickHandler
    }}
    {{!-- {{frost-text
      onChange=onChangeHandler
      onFocusIn=onFocusInHandler
    }} --}}
  {{/block-slot}}
  {{#block-slot 'code-pane'}}
    {{!-- BEGIN-SNIPPET button}}
      {{frost-button
         autofocus= // (false by default)
         disabled= // (false by default)
         size= // ['small', etc.]
         priority= // ['primary', etc.]
         text= // e.g. 'Foo'
         onClick= // action handler for button click
      }}
    {{ END-SNIPPET --}}
    {{code-snippet name='button.hbs'}}
  {{/block-slot}}
  {{#block-slot 'controls-pane'}}
    {{#controls-pane onChange=(action (action 'updateProps'))}}
      {{property-control
        type='button-group'
        label='Size'
        buttons=(array
          (hash text='small')
          (hash text='medium')
          (hash text='large')
        )
      }}
      {{property-control
        type='button-group'
        label='Priority'
        buttons=(array
          (hash text='primary')
          (hash text='secondary')
          (hash text='tertiary')
        )
      }}
      {{property-control
        type='checkbox'
        label='Disabled'
        size='small'
      }}
      {{property-control
        type='text'
        label='Text'
        value='Hello'
      }}
      {{property-control
        type='multi-select'
        label='Events'
        data=(array
          (hash label='onClick' value='onClick')
        )
      }}
    {{/controls-pane}}
  {{/block-slot}}
{{/ember-dewey-docs}}

